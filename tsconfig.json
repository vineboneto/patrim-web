{
"compilerOptions": {
  "target": "es6",
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ],
  "esModuleInterop": true,
  "module": "esnext",
  "moduleResolution": "node",
  "jsx": "react",
  "rootDir": "src",
  "baseUrl": "src",
  "rootDirs": ["src", "tests"],
  "paths": {
    "@/*": ["*"],
    "@/tests/*": ["../tests/*"]
  },
  "allowJs": true,
  "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": []
}