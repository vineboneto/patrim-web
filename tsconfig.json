{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "rootDirs": ["src", "tests"],
    "allowJs": true,
    "paths": {
        "@/*": ["*"],
        "@/tests/*": ["../tests/*"]
    },
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": []
}
